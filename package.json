{
  "name": "core-banking-ddd",
  "version": "1.0.0",
  "description": "Core Banking System with DDD and Event Sourcing",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/app.ts",
    "start": "bun src/app.ts",
    "test": "NODE_ENV=test bun test",
    "test:watch": "NODE_ENV=test bun test --watch",
    "db:migrate": "edgedb migrate",
    "db:seed": "bun scripts/seed.ts",
    "docker:build": "docker build -t core-banking .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "lint": "bunx eslint src/**/*.ts",
    "format": "bunx prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.1",
    "amqplib": "^0.10.3",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "edgedb": "^1.4.1",
    "eslint-config-prettier": "^10.1.5",
    "hono": "^3.11.7",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "shallow-equal-object": "^1.1.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.17.20",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "bun-types": "^1.0.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}